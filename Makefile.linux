CC = gcc
GFLAGS = -lpthread
LIB = -L/usr/local/lib -lssl -lcrypto

all: server client

%.o: %.c myftp.h myssl.h
	${CC} $< -c

server: myftpserver.o myftp.o myssl.o
	${CC} -o myftpserver myftpserver.o myftp.o myssl.o $(GFLAGS) $(LIB)

client: myftpclient.o myftp.o myssl.o
	${CC} -o myftpclient myftpclient.o myftp.o myssl.o $(GFLAGS) $(LIB)

clean:
	rm *.o
